---
// src/components/Footer.astro
import 'bootstrap-icons/font/bootstrap-icons.css';
const currentYear = new Date().getFullYear();
---

<footer class="footer py-5" style="background-color: #45280B;">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-4 col-md-6">
                <h5 class="text-white fw-bold mb-3">Quick Links</h5>
                <ul class="list-unstyled footer-links">
                    <li class="mb-2">
                        <a target="_blank" rel="noopener noreferrer"
                           href="http://www.kckfd.org/index.php/iaff64ps/"
                           class="text-white-50 text-decoration-none d-inline-block">
                            Peer Support
                        </a>
                    </li>
                    <li class="mb-2">
                        <a target="_blank" rel="noopener noreferrer"
                           href="https://www.wycokck.org/Departments/Human-Resources/Labor-Relations#section-7"
                           class="text-white-50 text-decoration-none d-inline-block">
                            Wyandotte County Union Info
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6">
                <h5 class="text-white fw-bold mb-3">Contact Info</h5>
                <ul class="list-unstyled footer-contact">
                    <li class="mb-2 d-flex align-items-center text-white-50">
                        <i class="bi bi-geo-alt-fill me-2"></i>
                        PO Box 6243 Kansas City KS 66106
                    </li>
                    <li class="mb-2 d-flex align-items-center text-white-50">
                        <i class="bi bi-telephone-fill me-2"></i>
                        (913) 788-8839
                    </li>
                    <li class="mb-2 d-flex align-items-center text-white-50">
                        <i class="bi bi-envelope-fill me-2"></i>
                        info@iaff64.com
                    </li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6">
                <h5 class="text-white fw-bold mb-3">Follow Us</h5>
                <div class="d-flex gap-3 social-links">
                    <a target="_blank" rel="noopener noreferrer"
                       href="https://www.facebook.com/p/KCK-Professional-Firefighters-Association-100064730981267/"
                       class="text-white-50 social-icon p-2 rounded-circle d-inline-flex align-items-center justify-content-center">
                        <i class="bi bi-facebook"></i>
                    </a>

                    <a target="_blank" rel="noopener noreferrer"
                       href="https://www.instagram.com/iaff64ps/"
                       class="text-white-50 social-icon p-2 rounded-circle d-inline-flex align-items-center justify-content-center">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
        <hr class="my-4 border-secondary opacity-25" />
        <div class="text-center text-white-50">
            <small>&copy; {currentYear} IAFF Local 64. All rights reserved.</small>
        </div>
    </div>
</footer>

<style>
    .footer-links a {
        transition: color 0.3s ease, padding-left 0.3s ease;
    }

    .footer-links a:hover {
        color: #A88418 !important;
        padding-left: 0.5rem;
    }

    .social-icon {
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        background-color: #A88418;
        color: white !important;
        transform: translateY(-3px);
    }

    .footer-contact li {
        transition: transform 0.3s ease;
    }

    .footer-contact li:hover {
        transform: translateX(5px);
    }

    .bi {
        font-size: 1.2rem;
    }

    .social-icon .bi {
        font-size: 1.5rem;
    }
</style>