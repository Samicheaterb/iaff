---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import groupPhoto from '../assets/group-photo.jpg';
import santaPhoto from '../assets/random-santa-clause.jpg';
import carPhoto from '../assets/fire-vest-car.jpg';
---

<MainLayout title="Home">
    <!-- Hero Section -->
    <section class="hero-section position-relative d-flex align-items-center justify-content-center">
        <div class="hero-background"></div>
        <div class="container text-center text-white position-relative">
            <h1 class="display-3 fw-bold mb-4">Local 64 Firefighters</h1>
            <h2 class="display-6 mb-4">Community Services Foundation</h2>
            <!--<a href="#about" class="btn btn-primary btn-lg">Donate (w/venmo)</a>-->
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="mb-4">Serving Our Community</h2>
                    <p class="lead">We are a 501(c)3 that is focusing on the communities we serve as firefighters. We are dedicated to protecting and serving our community while supporting our firefighters and their families.</p>
                    <p>Our foundation works tirelessly to:</p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i>Support firefighter safety and training</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i>Provide community fire safety education</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i>Assist families of firefighters</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div id="communityCarousel" class="carousel slide rounded shadow-lg overflow-hidden" data-bs-ride="carousel">
                        <!-- Carousel Indicators -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#communityCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#communityCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#communityCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>

                        <!-- Carousel Items -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <Image
                                        src={groupPhoto}
                                        alt="Group of Local 64 Firefighters"
                                        class="d-block w-100"
                                        width={600}
                                        height={400}
                                />
                            </div>
                            <div class="carousel-item">
                                <Image
                                        src={carPhoto}
                                        class="d-block w-100"
                                        alt="Community Training"
                                        width={600}
                                        height={400}
                                />
                            </div>
                            <div class="carousel-item">
                                <Image
                                        src={santaPhoto}
                                        class="d-block w-100"
                                        alt="Fire Safety Education"
                                        width={600}
                                        height={400}
                                />
                            </div>
                        </div>

                        <!-- Carousel Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#communityCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#communityCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Programs Section -->
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Our Programs</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-primary mb-3">
                                <i class="bi bi-heart-fill fs-3"></i>
                            </div>
                            <h3 class="card-title h4">Community Outreach</h3>
                            <p class="card-text">Engaging with local schools and organizations to promote fire safety and emergency preparedness.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-primary mb-3">
                                <i class="bi bi-shield-fill-check fs-3"></i>
                            </div>
                            <h3 class="card-title h4">Safety Training</h3>
                            <p class="card-text">Providing advanced training and equipment for our firefighters to ensure their safety and effectiveness.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-primary mb-3">
                                <i class="bi bi-people-fill fs-3"></i>
                            </div>
                            <h3 class="card-title h4">Family Support</h3>
                            <p class="card-text">Supporting firefighter families through scholarships, emergency assistance, and community events.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-5 bg-primary text-white">
        <div class="container text-center">
            <h2 class="mb-4">Join Us in Making a Difference</h2>
            <p class="lead mb-4">Your support helps us continue our mission of serving and protecting our community.</p>
            <a href="/iaff/donate" class="btn btn-light btn-lg">Donate Now</a>
        </div>
    </section>
</MainLayout>

<style>
    .hero-section {
        height: 80vh;
        min-height: 600px;
        position: relative;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('../assets/firetruck.png');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        filter: brightness(0.6);
        z-index: 0;
    }

    .hero-section::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3));
        z-index: 1;
    }

    .hero-section .container {
        z-index: 2;
    }
    /* Carousel styling */
    .carousel {
        border-radius: 8px;
        overflow: hidden;
    }

    .carousel-item {
        height: 400px;
    }

    .carousel-item img {
        object-fit: cover;
        height: 100%;
        width: 100%;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 10%;
        opacity: 0.8;
    }

    .carousel-indicators {
        margin-bottom: 1rem;
    }

    .carousel-indicators button {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin: 0 4px;
    }

    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }

    /* Card hover effects */
    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .hero-section {
            height: 60vh;
            min-height: 400px;
        }

        .hero-section h1 {
            font-size: 2.5rem;
        }

        .hero-section h2 {
            font-size: 1.8rem;
        }
    }
</style>
<script>
    // Initialize carousel with options
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof bootstrap !== 'undefined') {
            const carousel = new bootstrap.Carousel(document.querySelector('#communityCarousel'), {
                interval: 5000, // Change slides every 5 seconds
                wrap: true,    // Continuous loop
                pause: 'hover' // Pause on mouse hover
            });
        }
    });
</script>